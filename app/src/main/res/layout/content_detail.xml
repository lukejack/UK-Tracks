<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.jackson.luke.UKTracks.DetailActivity"
    tools:showIn="@layout/activity_detail">


    <TextView
        android:textSize="35sp"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="58dp"
        android:paddingBottom="4dp"
        android:id="@+id/title"
        android:textAlignment="center"/>


    <ImageView
        android:layout_width="330dp"
        android:layout_height="330dp"
        android:background="#000000"
        android:padding="2dp"
        android:id="@+id/art"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true" />

    <TextView

        android:textSize="25sp"
        android:textColor="#d41e07"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/art"
        android:layout_alignStart="@+id/art"
        android:id="@+id/artist" />

    <TextView

        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artist"
        android:layout_alignStart="@+id/artist"
        android:id="@+id/dates"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        />

    <TextView

        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/country"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:layout_below="@+id/artist"
        android:layout_alignEnd="@+id/art" />


    <TextView
        android:text="View online at LastFM"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/lastfmtxt"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:gravity="start|center"

        android:layout_alignTop="@+id/lastFM"
        android:layout_alignStart="@+id/dates"
        android:layout_toStartOf="@+id/lastFM" />

    <TextView
        android:text="Search on YouTube"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/youtubetxt"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:layout_gravity="start"
        android:gravity="start|center"
        android:layout_below="@+id/lastFM"
        android:layout_alignStart="@+id/dates"
        android:layout_toStartOf="@+id/youtube" />


    <TextView
    android:text="Search on Wikipedia"
    android:textColor="#000000"
    android:layout_width="wrap_content"
    android:layout_height="60dp"
    android:id="@+id/wikipediatxt"
    android:fontFamily="sans-serif"
    android:textSize="22sp"
    android:gravity="start|center"
    android:layout_below="@+id/youtubetxt"
    android:layout_alignStart="@+id/dates"
    android:layout_toStartOf="@+id/youtube" />

    <TextView
        android:text="Search on Google"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/googletxt"
        android:fontFamily="sans-serif"
        android:textSize="22sp"
        android:gravity="start|center"
        android:layout_below="@+id/wikipediatxt"
        android:layout_alignStart="@+id/dates"
        android:layout_toStartOf="@+id/youtube" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/youtube"
        android:background="@mipmap/youtube"
        android:layout_alignBottom="@+id/youtubetxt"
        android:layout_alignStart="@+id/lastFM"
        android:layout_below="@+id/lastfmtxt" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/lastFM"
        android:background="@mipmap/lastfm"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/country"
        android:layout_alignEnd="@+id/country" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/wikipedia"
        android:background="@mipmap/wikipedia"
        android:layout_below="@+id/youtube"
        android:layout_alignEnd="@+id/country" />

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/google"
        android:background="@mipmap/google"
        android:layout_below="@+id/wikipedia"
        android:layout_alignEnd="@+id/country" />


</RelativeLayout>
</ScrollView>
